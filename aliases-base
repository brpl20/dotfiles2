# Grep Fast SS 
# alias s="grep 'YOUR_TERM' "
alias ss="grep_search_term_in_my_file"

grep_search_term_in_my_file() {
    grep "$1" $GD/wikit/daily/uteisNew.md | awk -F'=> ' '{print $2}' | awk '{print $1}' | pbcopy
    grep "$1" $GD/wikit/daily/uteisNew.md
}
