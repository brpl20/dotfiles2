alias bigtree='/Users/brpl/code/dotfiles2/shell_scripts/big_tree.sh'

# Define case-insensitive search
lg() {
    ll -a | grep -i "$@"
}

# Define case-sensitive search
lG() {
    ll -a | grep "$@"
}

# Fuzzy + Open
fopen() {
  local file
  file=$(fzf)
  if [[ -n "$file" ]]; then
    open "$file"
  fi
}

